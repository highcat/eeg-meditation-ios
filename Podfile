# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'eeg_meditation' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for EEG Meditation
  pod 'Charts'
  pod 'JTAppleCalendar'

  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'NSObject+Rx'

  # pod 'CRNotifications'

  # Pods for server data upload
  pod 'Alamofire', '~> 4.7'
  pod 'SwiftyJSON','~> 4.0'
  # encrypted persistent login data
  pod 'KeychainAccess', '~> 4.1'
  # Notification about new versions
  pod 'Siren'
  
  # Sentry: version is specific for the sentry.highcat.org server.
  pod 'Sentry', :git => 'https://github.com/getsentry/sentry-cocoa.git', :tag => '4.3.1'

  # HockeyApp testing
  pod 'AppCenter'
  
end
